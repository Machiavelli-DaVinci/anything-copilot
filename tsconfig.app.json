{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "tests/**/*"
  ],
  "exclude": ["src/**/__tests__/*", "src/manifest.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/chrome"]
  }
}
